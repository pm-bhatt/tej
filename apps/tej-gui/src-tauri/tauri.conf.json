{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tej",
  "version": "0.1.0",
  "identifier": "io.github.pm-bhattt.tej",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "icon": [
      "icons/icon.png"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Tej - Speed Test",
        "width": 480,
        "height": 640,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src https://speed.cloudflare.com; style-src 'self' 'unsafe-inline'; img-src 'self' data:"
    }
  }
}
